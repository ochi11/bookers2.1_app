<h1>User info</h1>
  <% if current_user.image.attached? %>
    <%= image_tag current_user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name <%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction <%= current_user.introduction %></th>
        <th></th>
      </tr>
    </tbody>
  </table>

<%= link_to "あとで", edit_user_path(current_user.id), class: "btn btn-secondary" %>


  <a class="btn btn-outline-secondary btn-block">
    <i class="fas fa-user-cog"></i>
  </a>

  <h1>New book</h1>
  <!-- form_with部分 -->
  <%= form_with model: book, local: true, url: '/books', method: :post do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <h4><%= f.submit 'Create Book' %></h4>
  <% end %>
