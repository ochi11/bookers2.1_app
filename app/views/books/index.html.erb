<h1>User info</h1>
  <% if current_user.image.attached? %>
    <%= image_tag book.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  <table class="table table-striped">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
      </tr>
      <tr>
        <th>introduction</th>
        <th></th>
      </tr>
    </tbody>
  </table>

<%= link_to "あとで", edit_users_path(current_user.id), class: "btn btn-secondary" %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local: true, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <h4><%= f.submit 'Create Book' %></h4>
<% end %>