<div class = "container">
  <div class = "row">
    <div class = "col-3">
        <p id="notice"></p>
　　<%= render 'list', book: @book, user: @user %>


    </div>
      <div class='col-md-8 offset-md-1'>
          <h1>Books</h1>
          <table>
            <thead>
              <tr>
                <th>
                  <p>Title</p>
                </th>
                <th>
                  <p>Opinion</p>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <th>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                  <%= link_to book_path(book.id) do %>
                  <span><%= book.title %></span>
                  <% end %>
                </th>
                <th>
                  <span><%= book.body %></span>
                </th>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
  </div>
</div>

