<h1>User info</h1>
  <%= f.file_field :profile_image, accept: "image/*" %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local: true, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <a><%= f.submit 'Create Book' %></a>
<% end %>