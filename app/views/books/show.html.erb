<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
        <p id="notice"></p>
　　<%= render 'list', book: @new_book, user: @book.user  %>


    </div>
      <div class='col-md-8 offset-md-1'>
          <h1>Book detail</h1>
          <table class = "table">
            <tbody>
              <tr>
                <th>

                     <%= link_to user_path(@book.user.id) do %>
　　　　　　　　　　  <% if @book.user.profile_image.attached? %>
                        <%= image_tag @book.user.profile_image, size: "100x100" %>
                      <% else %>
                        <%= image_tag 'no_image' %>
                      <% end %>
                        <%= @book.user.name %>
                     <% end %>

                </th>
                <th>

                </th>
                <th>
                    <%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                    <% end %>
                </th>
                <th>
                    <%= @book.body %>
                </th>
                <th>
                  <% if @book.user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                  <% end %>
                </th>
              </tr>
            </tbody>
          </table>
      </div>
  </div>
</div>