<div class = "container">
  <div class = "row">
    <div class = "col-3">
        <p id="notice"></p>
　　<%= render 'list', book: @new_book, user: @user  %>


    </div>
      <div class='col-md-8 offset-md-1'>
          <h1>Book detail</h1>
          <table>
            <thead>
              <tr>
                <th>
                     <%= link_to user_path(@book.user.id) do %>
                     <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
                     <% end %>
                </th>
                <th>
                    <%= link_to book_path(@book.id) do %>
                    <span><%= @book.title %></span>
                    <% end %>
                </th>
                <th>
                  <span><%= @book.body %></span>
                </th>
                <th>
                  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                </th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>



            </tbody>
          </table>
      </div>
  </div>
</div>